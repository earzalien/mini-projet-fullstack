{
    "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf"
    },
    "linter": {
        "rules": {
            "recommended": true,
            "suspicious": {
                "noConsole": "error"
            }
        }
    },
    "files": {
        "maxSize": 524288,
        "ignoreUnknown": false,
        "includes": ["src/**"]
    }
}
